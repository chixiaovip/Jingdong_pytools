import datetime
import time
import keyboard
import pandas
from selenium import webdriver
from selenium.webdriver.common.by import By

def login():
    # 打开京东登录页，并进行登录
    browser.get("https://passport.jd.com/new/login.aspx")
    # 检查是否登录成功
    while True:
        try:
            if browser.find_element(by=By.LINK_TEXT, value="登录页面，调查问卷"):
                now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
                print("======请登录，请不要手动跳转到其他界面 时间：%s" % now)
                time.sleep(1) 
        except:
            now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
            print("======登录成功，请不要手动跳转到其他界面 时间：%s" % now)
            # 打开购物车界面
            browser.get("https://cart.jd.com")
            time.sleep(1)
            break

def picking(method):
    # 全选购物车
    if method == 1:
        if browser.find_element(by=By.NAME, value="select-all"):
            browser.find_element(by=By.NAME, value="select-all").click()
        time.sleep(1)
        sum = browser.find_element(by=By.CLASS_NAME, value="amount-sum")
        if sum.text == "已选择0件商品":
            if browser.find_element(by=By.NAME, value="select-all"):
                browser.find_element(by=By.NAME, value="select-all").click()
            now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
            print("======全选成功",sum.text,"时间：%s" % now)
        else:
            now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
            sum = browser.find_element(by=By.CLASS_NAME, value="amount-sum")
            print("======全选成功"," 时间：%s" % now)
            while True:
                sum = browser.find_element(by=By.CLASS_NAME, value="amount-sum")
                if sum.text == "已选择0件商品":
                    now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
                    print("======未勾选商品，请勾选 时间：%s" % now)
                    print("按回车键继续")
                    input()
                else:
                    while True:
                        # 确认是否抢购
                        sum = browser.find_element(by=By.CLASS_NAME, value="amount-sum")
                        print("======",sum.text,"时间：%s" % now)
                        print("开始抢购请输入“1”，继续勾选请输入“0”")
                        a = input()
                        if a == "1":
                            break
                        else:
                            print("请勾选商品 时间：%s" % now)
                            print("按回车键继续")
                            input()
                    break

    # 手动选择商品
    if method == 0:
        now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
        print("======请勾选商品 时间：%s" % now)
        print("按回车键继续")
        input()
        # 检查是否已经勾选
        while True:
                sum = browser.find_element(by=By.CLASS_NAME, value="amount-sum")
                if sum.text == "已选择0件商品":
                    now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
                    print("======未勾选商品，请勾选 时间：%s" % now)
                    print("按回车键继续")
                    input()
                else:
                    while True:
                        # 确认是否抢购
                            sum = browser.find_element(by=By.CLASS_NAME, value="amount-sum")
                            print("======",sum.text,"时间：%s" % now)
                            print("开始抢购请输入“1”，继续勾选请输入“0”")
                            a = input()
                            if a == "1":
                                break
                            else:
                                print("请勾选商品 时间：%s" % now)
                                print("按回车键继续")
                                input()
                    break

def buy(times,speed):
    while True:
        now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
        # 对比时间，时间到的话就点击结算
        print(now)
        if now >= times:
            # 点击结算按钮
            while True:
                try:
                    if browser.find_element(by=By.LINK_TEXT, value="去结算"):
                        browser.find_element(by=By.LINK_TEXT, value="去结算").click()
                except:
                    now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
                    print("======结算成功 时间：%s" % now)
                    break
            # 点击提交订单按钮
            while True:
                try:
                    if browser.find_element(by=By.ID, value="order-submit"):
                        browser.find_element(by=By.ID, value="order-submit").click()
                except:
                    now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
                    print("======提交订单成功，请手动输入密码支付 时间：%s" % now)
                    break
            # 点击立即支付按钮
            while True:
                try:
                    if browser.find_element(By.XPATH, '//*[@class="base-button pointer-g"]').text == "立即支付":
                        browser.find_element(By.XPATH, '//*[@class="base-button pointer-g"]').click()
                except:
                    now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
                    print("======点击立即支付，请手动输入密码支付 时间：%s" % now)
                    break
            # 输入密码并点击点击立即支付按钮
            if password != "0" and len(password) == 6:
                while True:
                    try:
                        if browser.find_element(By.XPATH, '//*[@class="payment"]/div[2]/div[1]/div[1]/div[1]').text == "立即支付":
                            browser.find_element(By.XPATH, '//*[@id="baseMode"]/div/div[2]/div/div[1]/div[2]').click()
                            i = 0
                            while True:
                                keyboard.press(password[i])
                                keyboard.release(password[i])
                                i = i + 1
                                if i == 6:
                                    break
                            if datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f') >= times_pay:
                                browser.find_element(By.XPATH, '//*[@class="payment"]/div[2]/div[1]/div[1]/div[1]').click()
                    except:
                        now = datetime.datetime.now().strftime('%Y-%m-%d %H:%M:%S.%f')
                        print("======点击立即支付成功，请关注订单状态 时间：%s" % now)
                        break
        else:
            time.sleep(speed)

#  定位元素方式三种任何一个都可以使用过，实际使用自由组合。
# （1）id定位 driver.find_element(by=By.ID,"id")
# （2）name定位 driver.find_element(by=By.NAME,"name")
# （3）class定位 driver.find_element(by=By.Class_NAME,"class_name")
# （4）XPATH定位 driver.find_element(By.XPATH,"XPATH")

# 抢购主函数
if __name__ == "__main__":
    times = input("请输入抢购时间，格式如(2022-06-15 20:00:00.000000):")
    speed = int(input("请输入刷新延迟时间，单位毫秒，只需输入数字:"))/1000
    password = str(input("请输入6位支付密码，输入0则自行输入密码支付:"))
    if password != "0" and len(password) == 6:
        times_pay = pandas.to_datetime(times, format='%Y-%m-%d %H:%M:%S.%f', errors='coerce') + datetime.timedelta(minutes=int(input("请输入付款延迟时间，单位秒，只需输入数字:")))
    browser = webdriver.Chrome()
    browser.set_window_size(1024,768)
    login()
    method = int(input("全选购物车请输入“1”，否则输入“0”："))
    picking(method)
    buy(times,speed)
